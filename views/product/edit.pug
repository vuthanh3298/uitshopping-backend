extends ../layouts/common.pug
block content

	h1 Sửa sản phẩm

	if errors
		each error in errors
			.alert.alert-danger=error

	form(action="/products/update/" + product.id,method="POST", enctype="multipart/form-data")
		.form-group
			label(for="ten") Tên sản phẩm
			input#ten.form-control(name="tenSP",type="text",value=values ? values.ten :"")

		.form-group
			label(for="mota") Mô tả
			input#mota.form-control(name="moTa",type="text",value=values ? values.mota :"")
		
		.form-group
			label(for="gia") Giá
			input#gia.form-control(name="gia",type="text",value=values ? values.gia :"")

		.form-group
			label(for="giacu") Giá cũ
			input#giacu.form-control(name="giaCu",type="text",value=values ? values.giacu :"")

		.form-group
			label(for="tilegiamgia") Tỉ lệ giảm giá
			input#tilegiamgia.form-control(name="tiLeGiamGia",type="text",value=values ? values.tilegiamgia :"")
		.form-group
			label(for="madanhmuc") Mã danh mục
			input#madanhmuc.form-control(name="maDM",type="text",value=values ? values.madanhmuc :"")

		.form-group
			label(for="anh") Ảnh
			input#anh.form-control-file(name="hinh",type="file")
		button.btn.btn-primary Update